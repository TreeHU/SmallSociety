</head>

<body>
<% include ../public/nav.html %>
    <main>
      <%
      if(sub =="smallbook"||sub=="smallart"||sub=="smallvideo"){
      %>
        <% include ../public/subnav_smallclub.html %>
        <%- include('../public/'+sub+'.html') %>
      <%
      }else if(sub=="smallmain"){
      %>
        <% include ../public/subnav_smallclub.html %>
        <% include ../public/smallclub.html %>
      <%
    }else if(sub =="management"||sub=="account"||sub=="design"||sub=="uiux"||sub=="it"||sub=="production"){
      %>
        <% include ../public/subnav_leader.html %>
        <link rel="stylesheet" type="text/css" href="/css/leader.css">
        <%- include('../public/'+sub+'.html') %>
      <%
      }else if(sub=="leadermain"){
      %>
        <% include ../public/subnav_leader.html %>
        <link rel="stylesheet" type="text/css" href="/css/leader.css">
        <% include ../public/leader.html %>
      <%
      }else if(sub=="notice"){%>
        <link rel="stylesheet" type="text/css" href="/css/notice.css">
        <%
        if(notice_num=="none"){
          %>
          <% include ../public/notice.html %>
          <%
        }else{
          %>
          <%- include('../public/notice'+notice_num+'.html') %>
          <%
        }
      }else if(sub=="login"){
        %>
          <link rel="stylesheet" type="text/css" href="/css/login.css">
          <% include ../public/login.html %>
        <%
      }else{
      %>
        <div>잘못된 접근입니다</div>
      <%
      }
      %>
